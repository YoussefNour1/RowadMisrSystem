@model RowadMisrSystem.Models.Instructor

@{
    ViewData["Title"] = "Delete";
}


<main class="main" style="margin:50px; padding:3%; border:0.5px solid green">
    <h1>Delete</h1>

    <div>
        @if (Model == null)
        {
            <div>
                <center>
                    <h4>There is no instructor found</h4>
                </center>
            </div>
        }

        else
        {
            <h3>Are you sure you want to delete this?</h3>
            <hr />
            <div style="display: flex; align-items: center;">
                <!-- Image Container -->
                <div style="margin-right: 20px;">
                    <div style="border-radius:20px; width:250px; height:250px; border: 2px solid black; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                        @if (Model.Image == null)
                        {
                            <img src="~/images/default.jpg" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/instructors/@Model.Image" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                    </div>
                </div>

                <!-- Text Content Container -->
                <div>
                    <dt>
                        Name
                    </dt>
                    <dd>
                        @Html.DisplayFor(Model => Model.Name)
                    </dd>
                    <dt>
                        ID
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.InstructorId)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Department)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Department.Name)
                    </dd>
                </div>

            </div>
            <br />
            <br />

            <form asp-action="Delete">
                <input type="hidden" asp-for="InstructorId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        }
    </div>
</main>
