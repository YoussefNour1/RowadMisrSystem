@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
}
<div class="container-md" style="padding:20px">


<h1>Existing Departments</h1>

<p>
    <a asp-controller="Department" asp-action="New" class="btn btn-primary">Add New Department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Department Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>